---
const { service } = Astro.props;
---

<a href={`/directory?service=${service.name.toLowerCase().replace(' ', '-')}`} class="block group">
  <div class="bg-white rounded-lg shadow-md p-6 transition-all duration-300 hover:shadow-lg hover:translate-y-[-4px]">
    <div class="text-4xl mb-4">{service.icon}</div>
    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">{service.name}</h3>
    <p class="mt-2 text-sm text-gray-600">{service.description}</p>
  </div>
</a>