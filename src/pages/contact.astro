---
import Layout from '../layouts/Layout.astro';
import { providers } from '../data/providers.js';

// Get provider from query parameter
const providerSlug = Astro.url.searchParams.get('provider');
const selectedProvider = providerSlug ? providers.find(p => p.title.toLowerCase().replace(/\s+/g, '-') === providerSlug) : null;
---

<Layout
  title="Contact Us - Florida Lawn Network"
  description="Get in touch with Florida Lawn Network or request a quote from one of our lawn care providers."
>
  <div class="bg-primary-100 py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center">
        <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          {selectedProvider ? `Request a Quote from ${selectedProvider.title}` : 'Contact Us'}
        </h1>
        <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
          {selectedProvider 
            ? `Fill out the form below to request a personalized quote for your lawn care needs.`
            : `Have questions about our services? Need help finding the right lawn care provider? We're here to help.`}
        </p>
      </div>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8">
      <!-- Contact Form -->
      <div>
        <div class="bg-white rounded-lg shadow-md p-6 sm:p-8">
          <form class="space-y-6">
            {selectedProvider && (
              <div class="bg-primary-50 rounded-lg p-4 flex items-start mb-6">
                <div class="flex-shrink-0">
                  <img src={selectedProvider.logo} alt={`${selectedProvider.title} logo`} class="h-12 w-12 rounded-full object-cover" />
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-gray-900">Requesting quote from:</h3>
                  <p class="text-base font-semibold text-primary-800">{selectedProvider.title}</p>
                  <div class="flex items-center mt-1">
                    <div class="flex items-center">
                      {[...Array(5)].map((_, i) => (
                        <svg 
                          xmlns="http://www.w3.org/2000/svg" 
                          class={`h-4 w-4 ${i < Math.floor(selectedProvider.rating) ? 'text-accent-500' : 'text-gray-300'}`} 
                          viewBox="0 0 20 20" 
                          fill="currentColor"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                    <p class="ml-1 text-xs text-gray-500">{selectedProvider.rating} ({selectedProvider.reviewCount} reviews)</p>
                  </div>
                </div>
              </div>
            )}
            
            <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
              <div>
                <label for="first-name" class="block text-sm font-medium text-gray-700">First name</label>
                <div class="mt-1">
                  <input type="text" name="first-name" id="first-name" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md">
                </div>
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium text-gray-700">Last name</label>
                <div class="mt-1">
                  <input type="text" name="last-name" id="last-name" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md">
                </div>
              </div>
              <div class="sm:col-span-2">
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <div class="mt-1">
                  <input id="email" name="email" type="email" autocomplete="email" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md">
                </div>
              </div>
              <div class="sm:col-span-2">
                <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
                <div class="mt-1">
                  <input type="text" name="phone" id="phone" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md" placeholder="(555) 555-5555">
                </div>
              </div>
              <div class="sm:col-span-2">
                <label for="address" class="block text-sm font-medium text-gray-700">Property Address</label>
                <div class="mt-1">
                  <input type="text" name="address" id="address" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md">
                </div>
              </div>
              
              {!selectedProvider && (
                <div class="sm:col-span-2">
                  <label for="service" class="block text-sm font-medium text-gray-700">Service Needed</label>
                  <div class="mt-1">
                    <select id="service" name="service" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md">
                      <option value="">Select a service</option>
                      <option value="lawn-mowing">Lawn Mowing</option>
                      <option value="landscaping">Landscaping</option>
                      <option value="fertilization">Fertilization</option>
                      <option value="weed-control">Weed Control</option>
                      <option value="irrigation">Irrigation</option>
                      <option value="tree-services">Tree Services</option>
                      <option value="leaf-removal">Leaf Removal</option>
                      <option value="garden-design">Garden Design</option>
                    </select>
                  </div>
                </div>
              )}
              
              <div class="sm:col-span-2">
                <label for="property-size" class="block text-sm font-medium text-gray-700">Property Size (approx. sq ft)</label>
                <div class="mt-1">
                  <select id="property-size" name="property-size" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border-gray-300 rounded-md">
                    <option value="">Select property size</option>
                    <option value="small">Small (Less than 5,000 sq ft)</option>
                    <option value="medium">Medium (5,000 - 10,000 sq ft)</option>
                    <option value="large">Large (10,000 - 20,000 sq ft)</option>
                    <option value="x-large">Extra Large (More than 20,000 sq ft)</option>
                  </select>
                </div>
              </div>
              
              <div class="sm:col-span-2">
                <label for="message" class="block text-sm font-medium text-gray-700">Project Details</label>
                <div class="mt-1">
                  <textarea id="message" name="message" rows="4" class="py-3 px-4 block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 border border-gray-300 rounded-md" placeholder="Please describe your project or specific requirements..."></textarea>
                </div>
              </div>
              
              <div class="sm:col-span-2">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <input id="terms" name="terms" type="checkbox" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
                  </div>
                  <div class="ml-3">
                    <p class="text-sm text-gray-500">
                      By submitting this form, I agree to the <a href="#" class="font-medium text-primary-600 hover:text-primary-500">Privacy Policy</a> and consent to be contacted regarding my request.
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="sm:col-span-2">
                <button type="submit" class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition transform hover:scale-105">
                  {selectedProvider ? 'Request Quote' : 'Send Message'}
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
      
      <!-- Contact Info and Map -->
      <div class="mt-12 lg:mt-0">
        {selectedProvider ? (
          <div class="space-y-6">
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-lg font-medium text-gray-900 mb-4">About {selectedProvider.title}</h3>
              <p class="text-gray-600 mb-4">{selectedProvider.description}</p>
              
              <div class="mt-6">
                <h4 class="text-sm font-medium text-gray-900 mb-2">Services Offered:</h4>
                <div class="flex flex-wrap gap-2">
                  {selectedProvider.services.map(service => (
                    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                      {service}
                    </span>
                  ))}
                </div>
              </div>
              
              <div class="mt-6">
                <h4 class="text-sm font-medium text-gray-900 mb-2">Contact Information:</h4>
                <div class="space-y-3">
                  <div class="flex">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                    </svg>
                    <span class="ml-3 text-gray-700">{selectedProvider.contact.phone}</span>
                  </div>
                  <div class="flex">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                    <span class="ml-3 text-gray-700">{selectedProvider.contact.email}</span>
                  </div>
                  <div class="flex">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                    </svg>
                    <span class="ml-3 text-gray-700">{selectedProvider.location.city}, {selectedProvider.location.state} {selectedProvider.location.zip}</span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Service Area</h3>
              <div class="rounded-lg overflow-hidden h-80 bg-gray-100">
                <!-- Placeholder for map -->
                <div class="w-full h-full flex items-center justify-center bg-gray-100">
                  <p class="text-gray-400">Map of service area</p>
                </div>
              </div>
              <p class="mt-3 text-sm text-gray-600">
                {selectedProvider.title} serves customers in and around {selectedProvider.location.city}, {selectedProvider.location.state}.
              </p>
            </div>
          </div>
        ) : (
          <div class="space-y-6">
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-lg font-medium text-gray-900 mb-4">Contact Information</h3>
              <div class="space-y-4">
                <div class="flex">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900">Phone</p>
                    <p class="text-base text-gray-700">(555) 123-4567</p>
                  </div>
                </div>
                <div class="flex">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900">Email</p>
                    <p class="text-base text-gray-700">contact@fln.com</p>
                  </div>
                </div>
                <div class="flex">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900">Office</p>
                    <p class="text-base text-gray-700">123 Green Street, Austin, TX 78701</p>
                  </div>
                </div>
              </div>
              
              <div class="mt-8">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Business Hours</h3>
                <ul class="space-y-3">
                  <li class="flex justify-between">
                    <span class="text-gray-500">Monday - Friday</span>
                    <span class="text-gray-900">9:00 AM - 6:00 PM</span>
                  </li>
                  <li class="flex justify-between">
                    <span class="text-gray-500">Saturday</span>
                    <span class="text-gray-900">10:00 AM - 4:00 PM</span>
                  </li>
                  <li class="flex justify-between">
                    <span class="text-gray-500">Sunday</span>
                    <span class="text-gray-400">Closed</span>
                  </li>
                </ul>
              </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-lg font-medium text-gray-900 mb-4">Frequently Asked Questions</h3>
              <div class="space-y-4">
                <div>
                  <h4 class="text-base font-medium text-gray-900">How does Florida Lawn Network work?</h4>
                  <p class="mt-1 text-sm text-gray-600">Florida Lawn Network connects homeowners with qualified lawn care professionals in their area. You can search for providers, read reviews, and request quotes directly through our platform.</p>
                </div>
                <div>
                  <h4 class="text-base font-medium text-gray-900">Is there a fee to use Florida Lawn Network?</h4>
                  <p class="mt-1 text-sm text-gray-600">No, our service is completely free for homeowners. Lawn care providers pay a fee to be listed on our platform.</p>
                </div>
                <div>
                  <h4 class="text-base font-medium text-gray-900">How do I know if a provider is reliable?</h4>
                  <p class="mt-1 text-sm text-gray-600">All providers are vetted before being listed on our platform. Additionally, you can read reviews from other customers to help make your decision.</p>
                </div>
                <div>
                  <h4 class="text-base font-medium text-gray-900">How quickly will I receive a quote?</h4>
                  <p class="mt-1 text-sm text-gray-600">Most providers respond to quote requests within 24-48 hours. Some may respond even faster during business hours.</p>
                </div>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>