---
import Layout from '../layouts/Layout.astro';
import ProviderCard from '../components/ProviderCard.astro';
import { providers, services } from '../data/providers.js';

// Get query parameters
const service = '3'

// Filter providers if service parameter exists
let filteredProviders = providers;
let activeService = '';

if (service) {
  const normalizedService = service.toLowerCase().replace('-', ' ');
  activeService = services.find(s => 
    s.name.toLowerCase() === normalizedService
  )?.name || '';
  
  if (activeService) {
    filteredProviders = providers.filter(provider => 
      provider.services.some(s => s.toLowerCase() === activeService.toLowerCase())
    );
  }
}
---

<Layout 
  title={activeService ? `${activeService} Services - Florida Lawn Network` : "Lawn Care Directory - Florida Lawn Network"}
  description={activeService 
    ? `Find and compare top ${activeService} professionals in your area. Read reviews and get quotes from trusted ${activeService.toLowerCase()} service providers.` 
    : "Browse our comprehensive directory of lawn care professionals. Filter by service, read reviews, and connect with the perfect provider for your needs."}
>
  <div class="bg-primary-800 py-16 px-4 sm:px-6 lg:px-8 mt-0">
    <div class="max-w-7xl mx-auto">
      <div class="text-center">
        <h1 class="text-3xl font-extrabold text-white sm:text-4xl">
          {activeService ? `${activeService} Professionals` : 'Lawn Care Directory'}
        </h1>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-primary-100">
          {activeService 
            ? `Connect with the best ${activeService.toLowerCase()} experts in your area`
            : 'Find and compare top-rated lawn care providers tailored to your needs'}
        </p>
      </div>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
      <!-- Filters sidebar -->
      <div class="hidden lg:block lg:col-span-3">
        <div class="sticky top-24">
          <div class="bg-white shadow rounded-lg p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Filters</h2>
            <div class="space-y-6">
              <!-- Service filter -->
              <div>
                <h3 class="text-sm font-medium text-gray-900 mb-2">Services</h3>
                <div class="space-y-2">
                  {services.map(service => (
                    <div class="flex items-center">
                      <input 
                        id={`service-${service.id}`} 
                        name="service" 
                        type="checkbox" 
                        class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                        checked={activeService === service.name}
                      />
                      <label for={`service-${service.id}`} class="ml-2 text-sm text-gray-700">
                        {service.name}
                      </label>
                    </div>
                  ))}
                </div>
              </div>
              
              <!-- Rating filter -->
              <div>
                <h3 class="text-sm font-medium text-gray-900 mb-2">Minimum Rating</h3>
                <div class="space-y-2">
                  {[5, 4, 3, 2, 1].map(rating => (
                    <div class="flex items-center">
                      <input 
                        id={`rating-${rating}`} 
                        name="rating" 
                        type="radio" 
                        value={rating}
                        class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300"
                      />
                      <label for={`rating-${rating}`} class="ml-2 text-sm text-gray-700 flex items-center">
                        {[...Array(5)].map((_, i) => (
                          <svg 
                            xmlns="http://www.w3.org/2000/svg" 
                            class={`h-4 w-4 ${i < rating ? 'text-accent-500' : 'text-gray-300'}`} 
                            viewBox="0 0 20 20" 
                            fill="currentColor"
                          >
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        ))}
                        <span class="ml-1">& up</span>
                      </label>
                    </div>
                  ))}
                </div>
              </div>
              
              <!-- Price range filter -->
              <div>
                <h3 class="text-sm font-medium text-gray-900 mb-2">Price Range</h3>
                <div class="space-y-2">
                  <label for="price-min" class="block text-sm text-gray-700">Min Hourly Rate</label>
                  <input 
                    type="range" 
                    id="price-min" 
                    name="price-min" 
                    min="20" 
                    max="100" 
                    step="5" 
                    class="w-full"
                  />
                  <div class="flex justify-between">
                    <span class="text-xs text-gray-500">$20</span>
                    <span class="text-xs text-gray-500">$100</span>
                  </div>
                </div>
              </div>
              
              <!-- Apply filters button -->
              <button
                type="button"
                class="w-full flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Apply Filters
              </button>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Main content -->
      <div class="mt-8 lg:mt-0 lg:col-span-9">
        <div class="bg-white shadow rounded-lg p-6 mb-6">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
            <div>
              <h2 class="text-lg font-medium text-gray-900">
                {filteredProviders.length} providers found
                {activeService && (
                  <span class="text-gray-600 text-base font-normal">for {activeService}</span>
                )}
              </h2>
            </div>
            <div class="mt-4 sm:mt-0 flex items-center">
              <label for="sort-by" class="sr-only">Sort by</label>
              <select
                id="sort-by"
                name="sort-by"
                class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-md"
              >
                <option>Sort by: Featured</option>
                <option>Sort by: Highest Rated</option>
                <option>Sort by: Most Reviews</option>
                <option>Sort by: Lowest Price</option>
                <option>Sort by: Highest Price</option>
              </select>
            </div>
          </div>
        </div>
        
        <!-- Mobile filters button -->
        <div class="mb-6 lg:hidden">
          <button
            type="button"
            class="w-full flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
            </svg>
            Filters
          </button>
        </div>
        
        <!-- Provider cards -->
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3">
          {filteredProviders.map(provider => (
            <ProviderCard provider={provider} featured={provider.featured} />
          ))}
        </div>
        
        <!-- Empty state -->
        {filteredProviders.length === 0 && (
          <div class="text-center py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No providers found</h3>
            <p class="mt-1 text-sm text-gray-500">
              Try adjusting your search or filter criteria.
            </p>
            <div class="mt-6">
              <a
                href="/directory"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
              >
                Clear all filters
              </a>
            </div>
          </div>
        )}
        
        <!-- Pagination -->
        {filteredProviders.length > 0 && (
          <div class="mt-8 flex justify-center">
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <a
                href="#"
                class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                <span class="sr-only">Previous</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
              <a
                href="#"
                aria-current="page"
                class="z-10 bg-primary-50 border-primary-500 text-primary-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium"
              >
                1
              </a>
              <a
                href="#"
                class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium"
              >
                2
              </a>
              <a
                href="#"
                class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 hidden md:inline-flex relative items-center px-4 py-2 border text-sm font-medium"
              >
                3
              </a>
              <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                ...
              </span>
              <a
                href="#"
                class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium"
              >
                8
              </a>
              <a
                href="#"
                class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
              >
                <span class="sr-only">Next</span>
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </a>
            </nav>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>